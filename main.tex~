\newenvironment{bizarrelist}
 {\enumerate[
    align=left,
    leftmargin=0pt,
    labelwidth=0pt,
    label={\makebox[\textwidth][c]{\Roman*.}},
    ref=\arabic*,
    before=\changeitem,
 ]}
 {\endenumerate}
